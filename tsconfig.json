{
  "compilerOptions": {
    "module": "es2015",
    "target": "es5",
    "declaration": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "lib": [
      "dom",
      "es5",
      "es2015.promise",
      "es2016.array.include"
    ],
    "plugins": [
      {
        "type": "checker",
        "transform": "./tx.ts"
      },
    ]
  },
  "exclude": [
    "dist",
    "node_modules"
  ]
}
